<body>
  <h1>Restaurant list:</h1>

  <% @restaurants.each do |restaurant| %>
    <p>
      <a href="/restaurants/<%= restaurant.id %>">
        <%= restaurant.name %> (<%= restaurant.votes %>)
      </a>
    </p>
  <% end %>

   <footer>
    Built with ❤️ at Le Wagon Lisbon <%= Date.today.year %>
  </footer>
</body>
</html>
